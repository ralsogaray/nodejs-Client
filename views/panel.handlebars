
  <body class="container-fluid">
    <h1 class="text-center p-5">{{titulo}}</h1>
    <section class="row">
      <div class="col-sm-10 offset-sm-1">
        <a href="/panel/nueva" class="btn btn-success float-right my-3">Nueva Pelicula</a>
        <!-- LISTADO DE Peliculas -->
        <table class="table">
          <thead>
            <tr class="text-center">
              <th width="5%">ID</th>
              <th width="20%">TITULO</th>
              <th width="20%">ESTRENO</th>
              <th width="20%">GENERO</th>
              <th width="35%">ACCIONES</th>
            </tr>
          </thead>
          <tbody>
            {{#each peliculas}} <!--PARA RECORRER -->
            <!-- INICIO PELICULA -->
            <tr class="text-center">
              <td>{{this._id}}</td>
              <td>{{this.titulo}}</td>
              <td>{{this.estreno}}</td>
              <td>{{this.genero}}</td>
              <td>
                <a href="#" class="btn btn-primary">ACTUALIZAR</a>
                <button id="#" class="btn btn-danger">ELIMINAR</button>
              </td>
            </tr>
            <!-- FIN DE PELICULA -->  
            {{/each}}  
          </tbody>
        </table>
        <!-- FIN DE LAS PELICULAS -->
      </div>      
    </section>