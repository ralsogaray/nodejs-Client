<h1 class="text-center my-4">{{accion}} Película</h1>
<section class="row">

  <form class="col-sm-5 mx-auto" action="/{{_id}}" method="POST">
    <div class="form-group">
      <label for="title">Titulo</label>
      <input type="text" name="titulo" id="title" class="form-control" value="{{titulo}}">
    </div>
    <div class="form-group">
      <label for="estreno">Estreno</label>
      <input type="number" name="estreno" id="year" class="form-control" value="{{estreno}}">
    </div>
    <div class="form-group">
      <label for="genero">Genero</label></br>
      <input name="genero" list="genero" class="form-control" value="{{genero}}">
    </div>
    <datalist id="genre">
      <option value="Superheroes">
      <option value="Science Fiction">
      <option value="Fantasy">
      <option value="Documentary">
      <option value="Horror">
      <option value="Action">
      <option value="Drama">
      <option value="Comedy">
    </datalist>
    <button class="btn btn-primary" type="submit">{{accion}} película</button>
  </form>

</section>